@model AmdmWeb.Models.Song.SongPageModel


<script src="~/Scripts/jquery.bxslider.min.js"></script>
<link href="~/Content/jquery.bxslider.css" rel="stylesheet" />

<div id="header">
    <nav class="breadcrumb">
        <a class="breadcrumb-item" href="@Url.Action("Index", "Home")">Main</a>
        /
        <a class="breadcrumb-item" href="@Url.Action("Performer", "Performer", new { performerId = Model.Song.PerformerId, s = Model.SortAndPageData.SongsSortingType, page = Model.BackPage})">@Model.PerfoemerName</a>
        /
        <span class="breadcrumb-item active" id="thisSong">@Model.Song.Name</span>
    </nav>
</div>

<span class="left carousel-control" id="slider-prev"></span>
<span class="right carousel-control" id="slider-next"></span>

<ul class="bxslider" id="bxslider">
    <li id="Lif">
        <div id="divf">
            <div>
                <h2 class="col-md-12">
                    <a href="@Model.Song.SongPageLink">@Model.Song.Name <span class="badge">@Model.Song.Views</span></a>


                    <a href="@Model.Song.VideoLink"><span class="glyphicon glyphicon-film" aria-hidden="true"></span></a>

                    <a href="@Url.Action("SongEditPage", "Song", new { songId = Model.Song.Id, s = Model.SortAndPageData.SongsSortingType })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>

                </h2>
                <div id="myModal" class="modal fade" role="dialog"></div>


                <table class="table table-striped">
                    <tr>
                        <td class="col-md-6">
                            <pre>@Model.Song.Text</pre>
                        </td>
                        <td class="col-md-6">
                            <div class="container">
                                <div class="row">
                                    @foreach (var chord in Model.Song.Chords)
                                    {
                                        <div class="panel panel-info col-md-5">
                                            <div class="panel-heading">@chord.Name</div>
                                            <div class="panel-body">
                                                <img src="http://amdm.ru/images/chords/A_0.gif" />
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </li>

</ul>



<script>
    $(function () {
        needRedraw = false;
        firstSlide = false;
        lastSlide = false;
        firstSlideFlag = true;
        lastSlideFlag = true;
        function loop() {
            if(needRedraw)
            {
                slider.redrawSlider();
            }
            if(firstSlideFlag)
            {
                if(firstSlide)
                {
                    slideFade(1,count + 1);
                    firstSlideFlag = false;
                }
            }
            if(lastSlideFlag)
            {
                if(lastSlide)
                {
                    slideFade(count,0);
                    lastSlideFlag = false;
                }
            }
            setTimeout(loop, 100);
        };
        loop();

        var ajaxURL = '@Url.Action("GetSong","Song")';
        id = @Model.Song.PerformerId;
        sortType = "@Model.SortAndPageData.SongsSortingType";
        number = @Model.Song.Number;
        count = @Model.SortAndPageData.LasPageNumber;
        oldSlide = number;
        if(number == 1){
            firstSlide = true;
        }
        else{
            firstSlide = false;
        }
        if(number == count){
            lastSlide = true;
        }
        else{
            lastSlide = false;
        }

        $.ajax({
            type: "Get",
            url: ajaxURL,
            data: { performerId: id, s: sortType, songNumber: number },
            dataType: 'html',
            success: function (data) {
                $('#header').html(data);
            }
        });
        for(var i = 1; i <= count + 3; i++)
        {
            $('#bxslider').append('<li id="li'+i+'"><div id="'+i+'"></div></li>');
        }
        $('#' + number).html($('#divf').html());

        slider = $('.bxslider').bxSlider({
            controls: false,
            pager: false,
            startSlide: number,
            adaptiveHeight: true,
            adaptiveHeightSpeed: 100,
            onSliderLoad: function(currentIndex){
                needRedraw = true;
                var ajaxURL = '@Url.Action("SongInfo","Song")';
                $.ajax({
                    type: "Get",
                    url: ajaxURL,
                    data: { performerId: id, s: sortType, songNumber: number },
                    dataType: 'html',
                    success: function (data) {
                        $('#'+number).html(data);
                    }
                });
            }
        });
        header = function()
        {
            var ajaxURL = '@Url.Action("GetSong","Song")';
            $.ajax({
                type: "Get",
                url: ajaxURL,
                data: { performerId: id, s: sortType, songNumber: number },
                dataType: 'html',
                success: function (data) {
                    $('#header').html(data);
                    history.replaceState(null, null, 'Song?performerId=' + id + '&amp;s=' + sortType + '&amp;songNumber=' + number);
                }
            });
        };
        slide = function()
        {
            var ajaxURL = '@Url.Action("SongInfo","Song")';
            $.ajax({
                type: "Get",
                url: ajaxURL,
                data: { performerId: id, s: sortType, songNumber: number },
                dataType: 'html',
                success: function (data) {

                    $('#d'+number).html(data);
                    slider.reloadSlider({
                        controls: false,
                        pager: false,
                        startSlide: oldSlide,
                        adaptiveHeight: true,
                        adaptiveHeightSpeed: 100,
                        onSliderLoad: function(currentIndex){

                            var ajaxURL = '@Url.Action("SongInfo","Song")';
                            $.ajax({
                                type: "Get",
                                url: ajaxURL,
                                data: { performerId: id, s: sortType, songNumber: number },
                                dataType: 'html',
                                success: function (data) {
                                    $('#'+number).html(data);
                                }
                            });
                        }

                    });
                    slider.goToSlide(number);
                    $('#d'+number).html(data);
                    needRedraw = true;
                    if(number == 1)
                    {
                        firstSlide == true;
                    }
                    if(number == count)
                    {
                        lastSlide == true;
                    }

                }
            });
        };
        slideFade = function(a,b)
        {
            debugger;
            var ajaxURL = '@Url.Action("SongInfo","Song")';
            $.ajax({
                type: "Get",
                url: ajaxURL,
                data: { performerId: id, s: sortType, songNumber: number },
                dataType: 'html',
                success: function (data) {

                    $('#d'+b).html(data);
                    slider.reloadSlider({
                        controls: false,
                        pager: false,
                        mode: 'fade',
                        startSlide: a,
                        adaptiveHeight: true,
                        adaptiveHeightSpeed: 10
                    });
                    slider.goToSlide(b);
                    slider.goToSlide(a);
                    slider.reloadSlider({
                        controls: false,
                        pager: false,
                        startSlide: a,
                        adaptiveHeight: true
                    });
                    $('#d'+b).html(data);
                }
            });
        };


        $('#slider-prev').click(function(){
            needRedraw = false;
            oldSlide = number;
            if(number > 1)
            {
                number--;

            }
            else
            {
                oldSlide = count + 1;
                number = count;
            }
            slide();
            header();
            return false;
        });
        $('#slider-next').click(function(){
            needRedraw = false;
            oldSlide = number;
            if(number < count)
            {
                number++;
            }
            else
            {
                oldSlide = 0;
                number = 1;
            }
            slide();
            header();
            return false;
        });


    });
</script>